    "components": {
        "parameters": {
            "Code":{
                "name": "code",
                "in": "path",
                "description":"Identificador único da oportunidade de venda",
                "required": true,
                "example": "D MG 01 00000101",
                "schema":{
                    "type": "string"
                },
                "x-totvs": {
					"productInformation":[
						{
							"product":"protheus",
                            "avaliable":true,
                            "note": "Informar os campos Filial (AD1.AD1_FILIAL), Código da oportunidade (AD1.AD1_NROPOR) e a Revisão (AD1.AD1_REVISA)",
                            "minimalVersion":"12.1.21"
						}
					]
                }
            }
        },
        "schemas": {

        }
