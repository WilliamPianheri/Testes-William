        "version": "1.000",
        "title": "opportunity",
        "contact": {
            "name": "T-Talk",
            "url": "https://api.totvs.com.br",
            "email": "comiteintegracao@totvs.com.br"
        },
        "x-totvs": {
            "messageDocumentation":{
                "name": "Opportunity",
                "description": "Oportunidade de Venda",
                "segment": "Services"
            },
            "productInformation":[
